<div id="showJob">
  <div class="container">
    <!-- position -->
    <div class="postision2">
      <div class=" postision ">
        <div class="postision1 row" >
          <div class="m_3">
            <div class="col-md-1">
              <%= link_to company_path(@job.user.company) do %>
             <% if @job.user.company.images.attached? %>
              <%=  image_tag @job.user.company.images.first, :style =>"width: 60px; height: 60px; border-radius: 50px;" %>
            <% else %>
              <%= image_tag('no-image.jpg', :style => "width: 60px; height: 60px; border-radius: 50px;")%>
            <% end %>
            <% end %>
            </div>
            <div class="ml-5 col-md-7">
              <div class="posiname">
                <%= @job.title %>
              </div>
              <div class="posicompany">
                <%= @job.user.company.full_name %>
              </div>
            </div>
            <div class="inline-block">
            </div>
              <div class="text-center rounded col-md-2">
                     <div class="ml-5 col-md-2">
                  <% if @bookmarked.nil? %>
                <div>
                  <%= render "bookmarks/bookmark_form" %>
                </div>
              <% else %>
                <div>
                  <%= render "bookmarks/bookmarked_form" %>
                </div>
              <% end %>
                </div>
              </div>
            <div class="ml-5 col-md-2">
              <% if @appliedjob.nil? %>
                <div>
                  <%= render "applyjobs/applyjob_form" %>
                </div>
              <% else %>
                <div>
                  <%= render "applyjobs/appliedjob_form" %>
                </div>
              <% end %>
            </div>
        </div>
      </div>
      </div>
    </div>
    <!-- end -->

    <div class="mt-2 text-dark">
      <h2><strong><%= @job.title %></strong></h2>
    </div>
    <div class="displayf">
       <%= link_to company_path(@job.user.company) do %>
       <% if @job.user.company.images.attached? %>
        <%=  image_tag @job.user.company.images.first, :style => "width: 70px; height: 70px; border-radius: 50px; margin-right: 1em" %>
      <% else %>
        <%= image_tag('no-image.jpg', :style => "width: 70px; height: 70px; border-radius: 50px; margin-right: 1em")%>
      <% end %>
        <% end %>
        <h3><%= @job.user.company.full_name %></h3>
    </div>
    <!-- image -->
    <div class="image1">
      <% if @job.images.attached? %>
        <%=  image_tag(@job.images, class: "post-img") %>
      <% else %>
        <%= image_tag('no-image.jpg', class: "post-img")%>
      <% end %>
    </div>
    <!-- Application -->
    <div class="skills">
      <div class="justify-content-start mt-3 addressCareer">
        <div class="addressCareer">
          <div class="mr_3">
            <i class="fa fa-briefcase fa-lg" aria-hidden="true"> <%= @job.time_work_i18n %>
            </i>
          </div>
          <div class="mr_3">
            <i class="fa fa-graduation-cap fa-lg" aria-hidden="true"><%= @job.exp %> <%= t("global.job.year") %>
            </i>
          </div>
          <div class="mr_3">
            <i class="fa fa-money fa-lg" aria-hidden="true"> <%= @job.salary %></i>
          </div>
          <div class="mr_3">
            <% case @job.sex_i18n %>
              <% when 0 %>
              <i class="fa fa-male" aria-hidden="true"> <%= t("home.Female")%></i>
              <% when 1 %>
                <i class="fa fa-female" aria-hidden="true"> <%= t("home.Male")%></i>
              <% else %>
                <i class="fa fa-venus-mars fa-lg" aria-hidden="true"> <%= t("home.all")%></i>
            <% end %>
          </div>
        </div>
      </div>
        <div style="margin-top: 2em">
          <i class="fa fa-map-marker fa-lg" aria-hidden="true"><%= @job.area %></i>
        </div>
    </div>

    <div class="mt_8">
      <div class="row">
          <div class="col-md-8">
            <div>
              <div class="addressCareer">
                <h3 class="mr_3"><%= @job.user.company.full_name %> <%= t("global.job.members") %></h3>
                <div class="members">

                    <a href="#" class="badge badge-secondary" data-toggle="modal" data-target="#myModal"><%= t("global.job.viewmore") %></a>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                      <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"><%= t("global.job.member") %></h4>
                          </div>
                          <div class="modal-body">
                            <p><!-- Some text in the modal. --></p>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div>
                        </div>

                      </div>
                    </div>

                </div>
              </div>
              <div class="d-inline ">
                  <%= link_to image_tag(@user.company.images.first, class: "post-img"),job_path(@user.company) if @user.company.images.attached? %>
                  <h4><% @user.fullname %></h4>
                  <span class="text-secondary"><% @job.user.company %></span>
              </div>
            </div>
                <hr>

              <div>
                <h3><%= t("global.job.what") %></h3>
                <p style="font-size: 16px">
                  <%= @job.what.html_safe %>
                </p>
              </div>

               <div>
                <h3><%= t("global.job.why") %></h3>

                <p class="font_size">
                  <%= @job.why.html_safe %>
                </p>
              </div>
              <div>
                <h3><%= t("global.job.how") %></h3>

                <p class="font_size">
                  <%= @job.how.html_safe %>
                </p>
              </div>
            </div>
             <div class="col-md-4">
                <h5><strong><%= t("global.job.company") %></strong></h5>
                 <div class="mt-2 d-inline">
                  <i class="fa fa-building" aria-hidden="true"></i>
                    <%= link_to @job.user.company.full_name, company_path(@job.user.company)  %>
                </div><br>
                <div class="mt-2 d-inline">
                  <i class="fa fa-link" aria-hidden="true"></i>
                  <%  if @job.user.company.link %>
                  <%= link_to @job.user.company.link.first(30)+"..." %>
                  <% end %>
                </div><br>
                <div class="mt-2 d-inline">
                  <i class="fa fa-users" aria-hidden="true"></i>
                  <%= @job.user.company.total %>
                </div><br>
                <div class="mt-2 d-inline">
                  <i class="fa fa-map-marker" aria-hidden="true"></i>
                  <span class="text-secondary">
                    <%= @job.user.company.address %>
                  </span>
                </div><br>
                <div class="w_280">
                  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.401171435136!2d105.77973585011165!3d21.01662828593624!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313454aad14949b5%3A0x50fde6fabfba0a79!2zSGFuZGljbyBUb3dlciwgUGjhuqFtIEjDuW5nLCBN4buFIFRyw6wsIFThu6sgTGnDqm0sIEjDoCBO4buZaSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1595844150458!5m2!1svi!2s" width="100%" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
              </div>

          </div>

      </div>
  </div>

  <div class="jobs_related">
    <div class="container">
      <div class="pt-3">
        <h2><%= t("global.job.posting") %></h2>
      </div>
      <div class="text-center addressCareer">
        <% @job_similar.each do |job| %>
        <div class="mt-5 text-center wh">
          <%= link_to job_path(job) do %>
           <div>
             <% if job.images.attached? %>
              <%=  image_tag(job.images, style: "width: 223px; height: 100px", class: "post-img") %>
            <% else %>
              <%= image_tag('no-image.jpg', style: "width: 223px; height: 100px", class: "post-img")%>
            <% end %>
           </div>
           <div class="h4 mt-3">
              <%= job.title %>
           </div>
           <% end %>
           <div class="mt-3 addressCareer">
            <%= link_to company_path(job.user.company) do %>
             <% if job.user.company.images.attached? %>
              <%=  image_tag job.user.company.images.first, class: "rounded-circle", style: "width: 30px; height: 30px" %>
            <% else %>
              <%= image_tag('no-image.jpg', class: "rounded-circle", style: "width: 30px; height: 30px")%>
            <% end %>
            <span class="text-secondary ml-3"><%= job.user.company.full_name %></span>
            <% end %>
           </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>

</main>

