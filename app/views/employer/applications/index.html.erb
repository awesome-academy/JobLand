<div class="container">
<%= render 'employer/companies/navbar'%>
  <div class="col-md-10">
    <div class="row">
          <div class="card mb-3">
            <div class="card_header">
              <%= t("companies.applicants") %>
            </div>

          <div class="card mb-3">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped custab">
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th><%= t("exp.user") %></th>
                        <th><%= t("exp.job") %></th>
                      </tr>
                    </thead>
                    <% @applycations.each_with_index do |application,index| %>
                    <tr>
                      <td><%= index+1 %></td>
                      <td>
                        <%= link_to User.find(application.user_id).fullname, profile_path(application.user) %>
                      </td>
                      <td><%= link_to Job.find(application.job_id).title, employer_job_path(application.job_id)%></td>
                    </tr>
                    <% end %>
                  </table>
              </div>
            </div>
          </div>

          </div>
    </div>
  </div>
</div>
