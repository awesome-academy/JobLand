</div>
<script type="text/javascript">
  $('.slider').slick({
  centerMode: true,
  centerPadding: '110px',
  adaptiveHeight:true,
  slidesToShow: 1,
  arrows:true,
  autoplay: true,
  autoplaySpeed :3000,
  responsive: [
    {
     breakpoint : 768,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '40px',
        slidesToShow: 3
      }
    },
    {
      breakpoint: 480,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '40px',
        slidesToShow: 1
      }
    }
  ]
});
</script>

<script type="text/javascript">
  $('#myJobs').autocomplete({
    source: function (request, response) {
      $.ajax({
        url: "/home",
        data: { q:{title_or_area_cont: request.term }},
        dataType: 'json',
        success: function (data) {
          response($.map(data, function (dataItem) {
            return {data: dataItem.id, value: dataItem.title };
          }));
        },
      });
    },
    select: function(event, ui) {
      window.location.assign('http://localhost:3000/jobs/' + ui.item.data);
    },
  });
</script>
